            <!-- Footer Styles-->
            <content id="theme_customize_content_footer" string="Footers" title="Choose your Footer styles">
                <more data-depends="">
                    <list>
                        <opt data-xmlid="theme_clarico_vega.option_footer_01_assets,theme_clarico_vega.customize_footer_style_1"
