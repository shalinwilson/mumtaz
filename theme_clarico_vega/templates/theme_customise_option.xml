                             data-icon="/theme_clarico_vega/static/src/img/customise_option/footer_7.jpg"
                             string=" "/>
                    </list>
                </more>
            </content>
            <!-- Theme Configurations Added by ept_1-->
            <content id="theme_configuration" string="Theme Settings"
                     title="Manage Theme Features">
                <list>
                    <checkbox>
                        <opt data-xmlid="theme_clarico_vega.ajax_add_to_cart" data-reload="/"
                             string="AJAX Shopping Cart"/>
                    </checkbox>
                    <checkbox>
                        <opt data-xmlid="theme_clarico_vega.quickview_icon_shop_product_item" data-reload="/"
                             string="Quick View"/>
                    </checkbox>
                    <checkbox>
                        <opt data-xmlid="theme_clarico_vega.website_pricefilter_ept" data-reload="/"
                             string="Price Filter"/>
                    </checkbox>
                    <checkbox>
                        <opt data-xmlid="theme_clarico_vega.website_attribute_values_count_ept" data-reload="/"
                             string="Product Count In Shop Filter"/>
                    </checkbox>
                    <checkbox>
                        <opt data-xmlid="theme_clarico_vega.display_product_associate_attribute_value_ept"
                             data-reload="/"
                             string="Show Associated Attribute Value"/>
                    </checkbox>
                    <checkbox>
                        <opt data-xmlid="theme_clarico_vega.custom_template" data-reload="/"
                             string="Advance Mini cart"/>
                    </checkbox>
                    <checkbox>
                        <opt data-xmlid="theme_clarico_vega.login_popup_ept" data-reload="/"
                             string="Login Popup"/>
                    </checkbox>
                    <checkbox>
                        <opt data-xmlid="theme_clarico_vega.product_sticky_details_container" data-reload="/"
                             string="Sticky Product Details"/>
                    </checkbox>
                    <checkbox>
                        <opt data-xmlid="theme_clarico_vega.product_sticky_gallary" data-reload="/"
                             string="Sticky Product Gallary"/>
                    </checkbox>
                </list>
                <list>
                    <checkbox>
                        <opt data-xmlid="theme_clarico_vega.load_products_through_ajax" data-reload="/"
                             string="Load Products Through Ajax"/>
                    </checkbox>
                    <checkbox>
                        <opt data-xmlid="theme_clarico_vega.product_brand_attribute_custom" data-reload="/"
                             string="Product Brand"/>
                    </checkbox>
                    <!--                    product_brand_container-->
                    <checkbox>
                        <opt data-xmlid="theme_clarico_vega.menu_vertical" data-reload="/"
                             string="Vertical Menu"/>
                    </checkbox>
                    <checkbox>
                        <opt data-xmlid="theme_clarico_vega.website_submenu_label_ept" data-reload="/"
                             string="Menu Label"/>
                    </checkbox>
                    <checkbox>
                        <opt data-xmlid="theme_clarico_vega.sticky_product_categories" data-reload="/"
                             string="Sticky Attribute &amp; Category Filter"/>
                    </checkbox>
                </list>
                <!-- Product Label Styles -->
                <list string="Product Label">
                    <checkbox>
                        <opt data-xmlid="theme_clarico_vega.clarico_shop_products_label" data-reload="/"
                             string="Product Label"/>
                    </checkbox>
                    <more data-depends="">
                        <list>
                            <opt data-widget="color" data-color="product_label" string="Default Color of Label"/>
                        </list>
                    </more>
                </list>
            </content>
            <!-- End by ept_1 -->
        </xpath>
        <!-- Added color for header text and footer text -->
        <xpath expr="//content[@id='theme_customize_content_colors']//list[1]//opt[5]"
               position="replace">
        </xpath>
        <xpath expr="//content[@id='theme_customize_content_colors']//list[4]"
               position="after">
            <list string="Header">
                <opt data-widget="color" data-color-type="theme" data-color="gamma" string="Header Text Color"/>
                <opt data-widget="color" data-color="header_text_hover_color" string="Header Text Hover Color"/>
            </list>
            <list string="Footer">
                <opt data-widget="color" data-color="footer_text_color" string="Footer Text Color"/>
            </list>
        </xpath>
    </template>

</odoo>
